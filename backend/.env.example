# Database
DATABASE_URL=postgresql://fuels_user:fuels_password@localhost:5432/fuels_logistics_db

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Gmail SMTP (for sending emails)
# To enable real email sending:
# 1. Set GMAIL_ENABLED=true
# 2. Set GMAIL_USER to your Gmail address
# 3. Generate an app password at https://myaccount.google.com/apppasswords
# 4. Set GMAIL_APP_PASSWORD to the 16-character app password (not your regular password)
GMAIL_ENABLED=false
GMAIL_USER=
GMAIL_APP_PASSWORD=

# Google Sheets (for future integration)
# GOOGLE_SHEETS_CREDENTIALS_PATH=

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# CORS - comma-separated allowed origins for production
# Example: https://your-frontend.up.railway.app,https://yourdomain.com
CORS_ORIGINS=

# JWT Authentication
# Generate a secure random secret key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production-use-random-generator

# SendGrid Email (for real email sending)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
# Free tier: 100 emails/day
SENDGRID_ENABLED=false
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@fuelslogistics.com
SENDGRID_FROM_NAME=Fuels Logistics AI Coordinator
