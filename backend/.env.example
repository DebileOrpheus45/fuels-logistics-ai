# Database
DATABASE_URL=postgresql://fuels_user:fuels_password@localhost:5432/fuels_logistics_db

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Resend Email (HTTP API — works on Railway, Render, etc.)
# 1. Create account at https://resend.com (free: 3,000 emails/month)
# 2. Add and verify a domain (or use onboarding@resend.dev for testing)
# 3. Create an API key
RESEND_API_KEY=
RESEND_FROM_EMAIL=onboarding@resend.dev
RESEND_FROM_NAME=Fuels Logistics AI Coordinator

# Gmail IMAP (inbound email polling only — NOT used for sending)
GMAIL_USER=
GMAIL_APP_PASSWORD=

# Google Sheets (for future integration)
# GOOGLE_SHEETS_CREDENTIALS_PATH=

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# CORS - comma-separated allowed origins for production
# Example: https://your-frontend.up.railway.app,https://yourdomain.com
CORS_ORIGINS=

# JWT Authentication
# Generate a secure random secret key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production-use-random-generator
