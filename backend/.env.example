# Database
DATABASE_URL=postgresql://fuels_user:fuels_password@localhost:5432/fuels_logistics_db

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# SendGrid Email (HTTP API — works on Railway, Render, etc.)
# 1. Create account at https://sendgrid.com (free: 100 emails/day)
# 2. Verify a sender identity
# 3. Create an API key (Full Access)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@fuelslogistics.com
SENDGRID_FROM_NAME=Fuels Logistics AI Coordinator

# Gmail IMAP (inbound email polling only — NOT used for sending)
GMAIL_USER=
GMAIL_APP_PASSWORD=

# Google Sheets (for future integration)
# GOOGLE_SHEETS_CREDENTIALS_PATH=

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# CORS - comma-separated allowed origins for production
# Example: https://your-frontend.up.railway.app,https://yourdomain.com
CORS_ORIGINS=

# JWT Authentication
# Generate a secure random secret key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production-use-random-generator
